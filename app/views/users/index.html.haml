%h1= t('models.user', "count": 2)
%p
  = link_to new_user_path, class: "btn-floating btn-large waves-effect waves-light red" do
    %i.material-icons add

%table.highlight
  %thead
    %tr
      %th Avatar
      %th.col-md-2 First Name
      %th.col-md-2 Last Name
      %th.col-md-5 Email
      %th.col-md-2 Role
      %th.col-md-1
  %tbody
    - @users.each do |user|
      - unless user.role == 'superadmin' && current_user.role == 'admin'
        %tr
          %td= image_tag avatar_url(current_user), class: "circle"
          %td= user.first_name
          %td= user.last_name
          %td= user.email
          %td= user.role.humanize
          %td
            = link_to edit_user_path(user), class: "waves-effect waves-light btn" do
              = icon('pencil')
            - if current_user && (current_user.id == user.id)
              %btn.btn.disabled
                = icon('trash')
            - else
              = link_to user_path(user), method: :delete, data: { confirm: 'Delete User?', commit: 'Delete', cancel: 'Cancel' }, class: 'waves-effect waves-light btn' do
                = icon('trash')
