.col.s2
  = image_tag avatar_url_big(@user), class: "materialboxed", width: "130px"
.col.s2
  %h4
    = @user.name
%table.striped{:width => "400"}
  %tr
    %th Avatar
    %td
      = link_to "http://gravatar.com/avatar/#{Digest::MD5.hexdigest(@user.email.downcase)}.png?s=400&d", "http://gravatar.com/avatar/#{Digest::MD5.hexdigest(@user.email.downcase)}.png?s=400&d", target: '_blank'
  %tr
    %th Name
    %td= @user.name
  %tr
    %th Email
    %td= @user.email
  %tr
    %th Role
    %td= @user.role.name.humanize
