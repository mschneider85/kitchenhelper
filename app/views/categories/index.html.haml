.fixed-action-btn
  = link_to new_category_path, class: "btn-floating btn-large waves-effect waves-light red" do
    %i.material-icons add
%ul.collapsible.popout{data:{collapsible: 'accordion'}}
  - @categories.each do |category|
    %li
      .collapsible-header
        %div
          = category.name
          = link_to category_path(category), method: :delete, data: { confirm: t('actions.confirm_delete', model: category.name), commit: t('actions.delete'), cancel: t('actions.cancel') }, class: 'secondary-content' do
            %i.material-icons delete_forever
      .collapsible-body
        = category.description
